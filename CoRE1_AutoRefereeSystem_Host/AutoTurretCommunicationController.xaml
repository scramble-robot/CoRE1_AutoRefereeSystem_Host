<UserControl x:Class="CoRE1_AutoRefereeSystem_Host.AutoTurretCommunicationController"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CoRE1_AutoRefereeSystem_Host"
             mc:Ignorable="d" 
             d:DesignHeight="500" 
             d:DesignWidth="600"
             d:Background="White"
             Loaded="UserControl_Loaded"
             IsEnabledChanged="UserControl_IsEnabledChanged">
    <Grid>
        <StackPanel HorizontalAlignment="Left"
                    Orientation="Horizontal">
            <local:RobotStatusManager x:Name="Robot1"
                                      PanelLabel="{Binding AutoTurretLabel, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                                      PanelColor="{Binding AutoTurretColor, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                                      Width="300"
                                      Height="470"/>
            <StackPanel>
                <StackPanel Orientation="Horizontal"
                            Margin="0,5,0,0">
                    <ToggleButton x:Name="CommEnabledToggleButton1"
                                  d:IsChecked="True"
                                  Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                  Margin="10,0,0,5"
                                  Checked="CommEnabledToggleButton_CheckedChanged"
                                  Unchecked="CommEnabledToggleButton_CheckedChanged" />
                    <Label Content="Communication Enabled"
                           FontSize="14"
                           Margin="5,0,5,5"
                           VerticalAlignment="Center" />
                    <Button x:Name="PingButton1"
                            Content="Ping"
                            Margin="11,0,10,10"
                            Click="PingButton_Click" />

                </StackPanel>
                <Label Content="Received Data from Robot 1"
                       Margin="10,0,10,0"
                       FontSize="14" />
                <TextBox x:Name="ReceivedDataTextBox1"
                         TextWrapping="Wrap"
                         d:Text="*** autoRef HOST *** P3.02h&#xA;ID:0107542 GroupeID:0107592&#xA;CH:15 nodeNo[0503]&#xA;&gt;"
                         Margin="15,0,15,10"
                         FontSize="12"
                         Height="100"
                         Width="270"
                         IsReadOnly="True"
                         AcceptsReturn="True"
                         Background="#67FFFFFF" />
                <StackPanel Orientation="Horizontal">
                    <TextBox x:Name="HostStatusTextBox"
                             Text="Not Connected"
                             IsEnabled="False"
                             FontSize="13"
                             Margin="10,10,5,10"
                             FontWeight="Bold"
                             IsReadOnly="True"
                             VerticalAlignment="Center"
                             Width="200" />
                    <ComboBox x:Name="ComPortSelectionComboBox"
                              Width="60"
                              Margin="8,10,5,10"
                              FontSize="12"
                              SelectionChanged="ComPortSelectionComboBox_SelectionChanged" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="ConnectButton"
                            Content="Open"
                            Margin="10,5,5,5"
                            Click="ConnectButton_Click"
                            HorizontalAlignment="Left"
                            Width="85" />
                    <Button x:Name="BootButton"
                            Content="Boot"
                            Margin="15,5,5,5"
                            Background="#FF44B73A"
                            BorderBrush="#FF44B73A"
                            Click="BootButton_Click" />
                    <Button x:Name="ShutdownButton"
                            Content="Shutdown"
                            Margin="10,5,5,5"
                            BorderBrush="#FFB7403A"
                            Background="#FFB7403A"
                            Click="ShutdownButton_Click" />
                </StackPanel>
                <Label Content="HostPCB Link Log"
                       Margin="10,5,10,0"
                       FontSize="16" />
                <TextBox x:Name="LinkTextBox"
                         TextWrapping="Wrap"
                         d:Text="*** autoRef HOST *** P3.02h&#xA;ID:0107542 GroupeID:0107592&#xA;CH:15 nodeNo[0503]&#xA;&gt;"
                         Margin="15,0,15,10"
                         FontSize="12"
                         Height="150"
                         Width="270"
                         IsReadOnly="True"
                         AcceptsReturn="True"
                         Background="#67FFFFFF" />
                <StackPanel Orientation="Horizontal">
                    <TextBox x:Name="SendDataTextBox"
                             TextWrapping="Wrap"
                             FontSize="12"
                             Style="{DynamicResource MaterialDesignTextBox}"
                             Margin="10,0,5,10"
                             Width="200"
                             KeyDown="SendDataTextBox_KeyDown" />
                    <Button x:Name="SendButton"
                            Content="Send"
                            Margin="10,0,10,10"
                            FontSize="14"
                            Click="SendButton_Click" />
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
